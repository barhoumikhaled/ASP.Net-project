@using FindIt.Models.Entities
@using FindIt.Models.Manager
@model Supplier
@{
    ViewBag.Title = "Edit";
    string labelHtmlClass = "control-label col-md-2";
    string inputHtmlClass = "form-control";
}

<h2>SupplierEdit</h2>

@using (Html.BeginForm("Edit", "Supplier", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.HiddenFor(m => m.Id);
    @Html.HiddenFor(m => m.AddressId);

    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = labelHtmlClass })
            @Html.TextBoxFor(m => m.Name, new { @class = inputHtmlClass })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Description, new { @class = labelHtmlClass })
            @Html.TextBoxFor(m => m.Description, new { @class = inputHtmlClass })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = labelHtmlClass })
            @Html.TextBoxFor(m => m.Email, new { @class = inputHtmlClass })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Phone, new { @class = labelHtmlClass })
            @Html.TextBoxFor(m => m.Phone, new { @class = inputHtmlClass })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ContactRessource, new { @class = labelHtmlClass })
            @Html.TextBoxFor(m => m.ContactRessource, new { @class = inputHtmlClass })
        </div>

        @Html.ActionLink("Edit Supplier's Address", "Edit", "Address", new { id = @Model.AddressId, supplierId = @Model.Id },null)

        <div class="form-group">
            <div class="col-md-offset-2">
                <input type="submit" value="submit" />
            </div>
        </div>
    </div>
}