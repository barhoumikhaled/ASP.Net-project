@using FindIt.Models

@model ApplicationUser

@{
    ViewBag.Title = "Details";
}

<h2 style="
padding: 0;
font-family: Tahoma, Helvetica,sans-serif;
font-size: 12px;
font-weight: bold;
vertical-align: bottom;
color: #4f8c31;
text-align: left;
width: 100%;">
  Les details de l'utilisateur
</h2>

<table class="table">
    <tr>
        <th rowspan="2">Id</th>
        <th rowspan="2">Fist Name</th>
        <th rowspan="2">Last Name</th>
        <th colspan="3">Adresse</th>
        <th rowspan="2">Postal Code</th>
        <th rowspan="2">Province</th>
        <th rowspan="2">Country</th>
        <th rowspan="2">Operation</th>
    </tr>
    <tr>
        <th>No</th>
        <th>Rue</th>
        <th>Ville</th>

    </tr>

    <tr>
        <td>@Model.Id</td>
        <td>@Model.Fname</td>
        <td>@Model.Lname</td>
        <td>@Model.Adress.No </td>
        <td> @Model.Adress.Street </td>
        <td>@Model.Adress.City</td>
        <td>@Model.Adress.PostalCode</td>
        <td> @Model.Adress.Province.Name</td>
        <td> @Model.Adress.Province.Country.Name</td>

        <td>
      
                @Html.ActionLink("Delete", "Delete", new { id = @Model.Id })
            </td>
            </tr>
        </table>

@Html.ActionLink("Back", "Index")